                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        contact@bizgoai.com
                    </a>
                </div>
            </div>
            <div class="mt-6 sm:mt-8 border-t border-slate-700 pt-6 sm:pt-8 text-center">
                <p class="text-sm sm:text-base text-slate-500 px-4">&copy; 2025 BizgoAI. Built for small businesses, by small business advocates.</p>
            </div>
        </div>
    </footer>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
            // Force repaint of pain-point cards when problem section enters viewport (fixes stuck blur bug)
            (function() {
                const section = document.getElementById('problem-section');
                if (!section) return;
                const cards = section.querySelectorAll('.pain-point-card');
                const repaint = () => {
                    cards.forEach(card => {
                        card.style.transform = 'scale(1)'; // force a repaint
                        // Optionally toggle a class to force style recalc
                        card.classList.remove('repaint-hack');
                        void card.offsetWidth; // force reflow
                        card.classList.add('repaint-hack');
                    });
                };
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting && entry.intersectionRatio > 0.1) {
                            repaint();
                        }
                    });
                }, {
                    root: null,
                    rootMargin: '0px',
                    threshold: 0.1
                });
                observer.observe(section);
            })();
            
            // Quote Slider Auto-Rotation
            (function() {
                const slides = document.querySelectorAll('.quote-slide');
                if (slides.length === 0) return;
                
                let currentSlide = 0;
                
                function rotateSlides() {
                    // Remove active and add exit to current slide
                    slides[currentSlide].classList.remove('active');
                    slides[currentSlide].classList.add('exit');
                    
                    // Move to next slide
                    currentSlide = (currentSlide + 1) % slides.length;
                    
                    // Add active to new slide
                    slides[currentSlide].classList.add('active');
                    slides[currentSlide].classList.remove('exit');
                    
                    // Clean up exit class after transition
                    setTimeout(() => {
                        slides.forEach(slide => {
                            if (!slide.classList.contains('active')) {
                                slide.classList.remove('exit');
                            }
                        });
                    }, 600);
                }
                
                // Rotate every 4 seconds
                setInterval(rotateSlides, 3300);
            })();
            
            // Initialize Lucide icons
            lucide.createIcons();

            // Stats Slider Functionality - seamless looping and left→right autoplay
            (function() {
                const slider = document.getElementById('statsSlider');
                const prevBtn = document.getElementById('statsPrevBtn');
                const nextBtn = document.getElementById('statsNextBtn');

                if (!slider || !prevBtn || !nextBtn) return;

                // Original cards collection
                const originalCards = Array.from(slider.querySelectorAll('.stat-card'));
                const originalCount = originalCards.length;

                if (originalCount === 0) return;

                // Duplicate slides to allow seamless looping
                slider.innerHTML = slider.innerHTML + slider.innerHTML;

                // Re-query cards after duplication
                const cards = slider.querySelectorAll('.stat-card');
                let cardWidth = 0;
                let currentIndex = originalCount; // start in the middle copy
                let autoPlayInterval;

                function getCardWidth() {
                    // Use the first card's offsetWidth; gap is 20px as CSS
                    const card = slider.querySelector('.stat-card');
                    if (!card) return 0;
                    const computed = card.offsetWidth;
                    return computed + 20; // include gap
                }

                function setTranslate(index, smooth = true) {
                    const translateX = -index * cardWidth;
                    if (smooth) slider.style.transition = 'transform 0.5s ease-in-out';
                    else slider.style.transition = 'none';
                    slider.style.transform = `translateX(${translateX}px)`;
                }

                // Move forward in DOM order (to the right visually we will decrement index)
                function stepBackward() {
                    currentIndex--;
                    setTranslate(currentIndex, true);

                    // If we've moved into the first copy (index < 1), snap back to the mirrored position
                    if (currentIndex <= 0) {
                        // after the transition ends, reset without animation
                            const onEnd = () => {
                                slider.removeEventListener('transitionend', onEnd);
                                slider.style.transition = 'none';
                                currentIndex = originalCount;
                                slider.style.transform = `translateX(${-currentIndex * cardWidth}px)`;
                                // force reflow
                                void slider.offsetWidth;
                                // Immediately continue movement so there's no visible gap
                                setTimeout(() => {
                                    stepBackward();
                                }, 0);
                            };
                            slider.addEventListener('transitionend', onEnd);
                    }
                }

                function stepForward() {
                    currentIndex++;
                    setTranslate(currentIndex, true);

                    // If we've moved past the duplicated set, snap back to original position
                    if (currentIndex >= originalCount * 2 - 1) {
                        const onEnd = () => {
                            slider.removeEventListener('transitionend', onEnd);
                            slider.style.transition = 'none';
                            currentIndex = originalCount - 1;
                            slider.style.transform = `translateX(${-currentIndex * cardWidth}px)`;
                            void slider.offsetWidth;
                        };
                        slider.addEventListener('transitionend', onEnd);
                    }
                }

                function startAutoPlay() {
                    stopAutoPlay();
                    // Autoplay should move cards from left → right visually.
                    // We achieve that by stepping backward (decrementing index) each tick.
                    autoPlayInterval = setInterval(() => {
                        stepBackward();
                    }, 3300);
                }

                function stopAutoPlay() {
                    clearInterval(autoPlayInterval);
                }

                // Wire buttons: keep manual controls intuitive (next = forward, prev = backward)
                nextBtn.addEventListener('click', () => {
                    stepForward();
                    stopAutoPlay();
                    startAutoPlay();
                });

                prevBtn.addEventListener('click', () => {
                    stepBackward();
                    stopAutoPlay();
                    startAutoPlay();
                });

                // Pause on hover/focus
                const sliderWrapper = document.querySelector('.stats-slider-wrapper');
                if (sliderWrapper) {
                    sliderWrapper.addEventListener('mouseenter', stopAutoPlay);
                    sliderWrapper.addEventListener('mouseleave', startAutoPlay);
                    sliderWrapper.addEventListener('focusin', stopAutoPlay);
                    sliderWrapper.addEventListener('focusout', startAutoPlay);
                }

                // Resize handling
                let resizeTimeout;
                window.addEventListener('resize', () => {
                    clearTimeout(resizeTimeout);
                    resizeTimeout = setTimeout(() => {
                        cardWidth = getCardWidth();
                        // reposition without animation
                        setTranslate(currentIndex, false);
                    }, 120);
                });

                // Initialize sizes and position
                cardWidth = getCardWidth();
                // Position slider to the middle copy so backward/forward stepping is seamless
                setTranslate(currentIndex, false);
                startAutoPlay();
            })();
            
            // Mobile: Scroll progress indicator
            const scrollProgress = document.getElementById('scrollProgress');
            const floatingCta = document.getElementById('floatingCta');
            
            function updateScrollProgress() {
                const scrollTop = window.scrollY;
                const docHeight = document.documentElement.scrollHeight - window.innerHeight;
                const scrollPercent = (scrollTop / docHeight) * 100;
                
                if (scrollProgress) {
                    scrollProgress.style.width = scrollPercent + '%';
                }
                
                // Show floating CTA:
                // - On mobile: show once the bottom of #problem-section is at or above the viewport bottom
                // - On larger viewports: keep the original percent-based behavior
                if (floatingCta) {
                    const mobileBreakpoint = 640;
                    if (window.innerWidth <= mobileBreakpoint) {
                        const problem = document.getElementById('problem-section');
                        if (problem) {
                            const problemBottom = problem.offsetTop + problem.offsetHeight;
                            const viewportBottom = window.scrollY + window.innerHeight;
                            // Also hide the floating CTA when the signup form reaches the viewport
                            const signup = document.getElementById('signup-form');
                            const signupTop = signup ? signup.offsetTop : Infinity;
                            // Show CTA only if we've passed the problem section bottom AND we have not reached the signup form
                            if (viewportBottom >= problemBottom && viewportBottom < signupTop && scrollPercent < 90) {
                                floatingCta.classList.add('visible');
                            } else {
                                floatingCta.classList.remove('visible');
                            }
                        } else {
                            // fallback to percent rule if problem-section not found
                            if (scrollPercent > 30 && scrollPercent < 90) {
                                floatingCta.classList.add('visible');
                            } else {
                                floatingCta.classList.remove('visible');
                            }
                        }
                    } else {
                        if (scrollPercent > 30 && scrollPercent < 90) {
                            floatingCta.classList.add('visible');
                        } else {
                            floatingCta.classList.remove('visible');
                        }
                    }
                }
            }
            
            window.addEventListener('scroll', updateScrollProgress);
            updateScrollProgress();
            
            // Mobile: Fade-in animation on scroll
            if (window.innerWidth <= 640) {
                const observerOptions = {
                    threshold: 0.1,
                    rootMargin: '0px 0px -50px 0px'
                };
                
                const fadeObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('visible');
                        }
                    });
                }, observerOptions);
                
                // Apply fade-in to cards
                document.querySelectorAll('.pain-point-card, .solution-card').forEach(card => {
                    card.classList.add('fade-in-up');
                    fadeObserver.observe(card);
                });
            }

            // Proof items: fade-in animation for the Supporting Proofs section (all viewports)
            (function() {
                const proofObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('visible');
                        }
                    });
                }, { threshold: 0.12 });

                document.querySelectorAll('.proof-item').forEach(el => {
                    el.classList.add('proof-fade');
                    proofObserver.observe(el);
                });
            })();

            // Smooth scroll to form on any CTA click (hero or solutions section)
            document.querySelectorAll('a[href="#signup-form"]')
                .forEach(function(ctaBtn) {
                    ctaBtn.addEventListener('click', function(e) {
                        const formSection = document.getElementById('signup-form');
                        if (formSection) {
                            e.preventDefault();
                            formSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                        }
                    });
                });

            // ... existing form submission code ...
            const form = document.getElementById('waitlist-form');
            const button = document.getElementById('submit-button');
            const formMessage = document.getElementById('form-message');
            const waitlistCard = document.getElementById('waitlist-card');
            const successMessage = document.getElementById('success-message');

                form.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    formMessage.textContent = '';
                    formMessage.className = 'text-sm';
                    const emailInput = document.getElementById('email');
                    const roleSelect = document.getElementById('role');
                    const businessInput = document.getElementById('business-name');
                    const email = emailInput.value;
                    const role = roleSelect.value;
                    const businessName = businessInput ? businessInput.value.trim() : '';

                if (!email || !validateEmail(email)) {
                    formMessage.textContent = 'Please enter a valid email address.';
                    formMessage.classList.add('text-red-600');
                    emailInput.focus();
                    return;
                }
                if (!role) {
                    formMessage.textContent = 'Please select your role.';
                    formMessage.classList.add('text-red-600');
                    roleSelect.focus();
                    return;
                }

                button.disabled = true;
                button.textContent = 'Submitting...';
                button.classList.add('opacity-75', 'cursor-not-allowed');

                try {
                    const formData = new FormData(form);
                    
                    // Step 1: Submit to Netlify Forms (for record keeping)
                    const netlifySubmit = fetch(window.location.pathname, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: new URLSearchParams(formData).toString()
                    });

                    // Step 2: Send welcome email via our function (parallel call for speed)
                    const emailSend = fetch('/.netlify/functions/send-welcome-email', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            email: email,
                            role: role,
                            businessName: businessName
                        })
                    });

                    // Wait for both to complete
                    const [netlifyResponse, emailResponse] = await Promise.all([netlifySubmit, emailSend]);

                    console.log('Form submitted to Netlify:', netlifyResponse.status);
                    console.log('Email function called:', emailResponse.status);

                    // Check if email was sent successfully
                    if (emailResponse.ok) {
                        const emailResult = await emailResponse.json();
                        console.log('Email sent successfully:', emailResult);
                    } else {
                        console.warn('Email sending failed, but form was submitted');
                    }

                    // Show success message regardless (form was submitted)
                    form.classList.add('hidden');
                    successMessage.classList.remove('hidden');
                    // Hide headline and subheadline
                    document.getElementById('form-headline').classList.add('hidden');
                    document.getElementById('form-subheadline').classList.add('hidden');
                    if(waitlistCard) {
                        waitlistCard.style.height = `${waitlistCard.offsetHeight}px`;
                    }

                } catch (err) {
                    // Handle errors
                    console.error('Submission error:', err);
                    formMessage.textContent = 'An error occurred. Please try again.';
                    formMessage.classList.add('text-red-600');
                    
                    // Re-enable button
                    button.disabled = false;
                    button.textContent = 'Get My Invite';
                    button.classList.remove('opacity-75', 'cursor-not-allowed');
                }
            });

            function validateEmail(email) {
                const re = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                return re.test(String(email).toLowerCase());
            }

            // NEW: IntersectionObserver for wave animation (play/pause)
            (function() {
                const section = document.getElementById('problem-section');
                if (!section) return;

                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        const waves = section.querySelectorAll('.wave');
                        if (entry.isIntersecting && entry.intersectionRatio > 0.1) {
                            // Play animation
                            waves.forEach(wave => {
                                wave.style.animationPlayState = 'running';
                            });
                        } else {
                            // Pause animation when off-screen
                            waves.forEach(wave => {
                                wave.style.animationPlayState = 'paused';
                            });
                        }
                    });
                }, { 
                    root: null, 
                    rootMargin: '0px', 
                    threshold: 0.1 // Triggers when 10% of the section is visible
                });

                observer.observe(section);
            })();
        });
    </script>

    <script>
        // Persona table interactions: click/keyboard support
        (function(){
            const rows = Array.from(document.querySelectorAll('.persona-row'));
            if(!rows.length) return;

            function clearSelected(){
                rows.forEach(r => r.classList.remove('selected'));
            }

            rows.forEach((row, idx) => {
                // Click/tap: NO visual change — do not focus or add classes
                row.addEventListener('click', (e)=>{
                    // Intentionally do not focus internal buttons or toggle selection
                    // to keep the visual state static on click.
                });

                // Keyboard navigation: Up/Down & Enter
                row.addEventListener('keydown', (e)=>{
                    if(e.key === 'ArrowDown'){
                        e.preventDefault();
                        const next = rows[(idx+1) % rows.length]; next.focus();
                    } else if(e.key === 'ArrowUp'){
                        e.preventDefault();
                        const prev = rows[(idx-1+rows.length) % rows.length]; prev.focus();
                    } else if(e.key === 'Enter' || e.key === ' '){
                        e.preventDefault();
                        const btn = row.querySelector('.persona-action a');
                        if(btn) btn.click();
                    }
                });
            });

            // Do NOT auto-select any row — keep visual state static
        })();
    </script>

